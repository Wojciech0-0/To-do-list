<Window x:Class="ListaZadan.SortOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListaZadan"
        mc:Ignorable="d"
        Title="Posortuj" Height="200" Width="300" WindowStartupLocation="Manual" Left="1000" Top="330" ResizeMode="CanMinimize">
    <Grid Background="#FF5FF0E2">
        <Grid Background="#FFCCFFEA" Margin="0,10,0,35">
            <StackPanel Margin="1">
                <Label Foreground="#FF509C11" Content="Sortuj według:" FontSize="16" Margin="0,0,0,6" Background="#FF9CFFCD"/>
                <RadioButton Foreground="#FF509C11" x:Name="rbPriority" Content="Priorytet" FontSize="14" Margin="0,5" Background="#FFCCFFEA"/>
                <RadioButton Foreground="#FF509C11" x:Name="rbDueDate" Content="Data" FontSize="14" Margin="0,5" Background="#FFCCFFEA"/>
                <RadioButton Foreground="#FF509C11" x:Name="rbName" Content="Nazwa" FontSize="14" Margin="0,5" Background="#FFCCFFEA"/>
            </StackPanel>
        </Grid>
        <Button  Background="#FF5DCD9F" Foreground="White" Content="OK" Width="80" Margin="107,139,107,0" HorizontalAlignment="Center" Click="Ok_Click"/>
    </Grid>
</Window>
